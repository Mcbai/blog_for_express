//- 包括主页在内的所有文章列表页
extends ../layout.pug

block content
  //- 左侧侧边栏
  include ../components/sidebar.pug

  div.ui.grid.main
    div.row
      //- 左侧大图
      aside.four.wide.column.aside
        div.ui.small.circular.image
          img(src="/img/avatar.jpg", alt="头像")
        p.text__intro 愿你走出半生
        p.text__intro 归来仍是少年
        div.buttons__social
          a(href="https://github.com/Mcbai")
            i.github.icon
          a(href="http://weibo.com/u/5600270831")
            i.weibo.icon
      //- 右侧主体内容
      div.ten.wide.column
        //- 导航和搜索
        nav.ui.secondary.pointing.menu
          a.item.active(href="/article/list/all") 所有
          a.item(href="/article/list/novel") 小说
          a.item(href="/article/list/it") 编程
        
        //- 文章列表
        each articleItem in articleLists
          div.ui.divided.items
            div.item
              div.content
                a.header(href="/article/content/" + articleItem._id) #{articleItem.title}
                div.meta
                  span.updatetime #{articleItem.updatetime}　
                p.description #{articleItem.description}
                div.extra
                  span.ui.basic.orange.label #{articleItem.label}
                  span.label 
                    | <i class="unhide icon"></i> #{articleItem.pv}　
                  span.label 
                    | <i class="heart icon"></i> #{articleItem.likes}　
              div.image
                img(src="" + articleItem.image, alt="")

        include ../components/footer.pug
