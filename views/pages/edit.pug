//- 文章详情页
extends ../layout.pug

block link
  link(rel="stylesheet",href="//cdn.bootcss.com/quill/1.2.4/quill.snow.min.css")
  link(rel="stylesheet", href="//cdn.bootcss.com/highlight.js/9.11.0/styles/monokai-sublime.min.css")

block content
  //- 最左侧侧边栏
  include ../components/sidebar.pug

  div.ui.main
    //- 顶部导航
    include ../components/header.pug
    //- 文章主体内容
    div.ui.text.container.edit__container
      form#edit__form(action="/admin/upload", method="post", enctype="multipart/form-data")
        div.ui.grid
          div.five.wide.column
            div.ui.form
              div.field
                label 封面
            div.uploader
              label.input__upload-label(for="articleCover")
              input#articleCover.input__upload(type="file",name="articleCover")
              img#input__upload-img(src=image)
            //- button#edit__form-button_cover(type="submit")

          div.eleven.wide.column
            div.ui.form
              div.field
                label 标题
                input#edit__title(type="text",name="title",placeholder="文章标题",value=title)

              div.field
                label 标签
                input#edit__label(type="text",name="label",placeholder="文章标签",value=label)

              div.field
                label 分类
                div.inline.fields
                  div.field
                    div.ui.radio.checkbox
                      input(type="radio",name="type",value="小说")
                      label 小说
                  div.field
                    div.ui.radio.checkbox
                      input(type="radio",name="type",value="编程")
                      label 编程
        
        div.editor-container
          input#editor__input-content(type="hidden",name="content", value=content)
          input#editor__input-text(type="hidden",name="text", value=text)
          input#editor__input-delta(type="hidden",name="delta",value=delta)
          input#params_id(type="hidden",name="params_id",value=_id)
          div#editor

        button#edit__button_submit.ui.orange.basic.button(type="submit") 提交

      include ../components/footer.pug
      
  script(src="//cdn.bootcss.com/KaTeX/0.7.1/katex.min.js",type="text/javascript")
  script(src="//cdn.bootcss.com/highlight.js/9.11.0/highlight.min.js",type="text/javascript")
  script(src="//cdn.bootcss.com/quill/1.2.4/quill.min.js",type="text/javascript")
  script(src="/js/edit.js",type="text/javascript")
          